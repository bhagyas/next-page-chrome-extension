{
  "manifest_version": 2,
  "name": "NextPage",
  "description": "Chrome, Next Page, Please! Extension that auto loads next page of your favourite forum, board or image site. Based on rich AutoPagerize database. Open source and extensible.",
  "version": "1.0.0",
  "icons": {
    "16": "images/manifest/16.png",
    "32": "images/manifest/32.png",
    "48": "images/manifest/48.png",
    "128": "images/manifest/128.png"
  },
  "permissions": [
    "http://wedata.net/*",
    "tabs"
  ],

  "update_url": "https://clients2.google.com/service/update2/crx",
  "homepage_url": "http://autopagerize.net/",
  "content_scripts": [
    {
      "js": [
        "extension.js",
        "autopagerize.user.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],

  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",

  "page_action": {
    "default_title": "Autopagerize for Chrome",
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "default_locale": "en",
  "web_accessible_resources": [
    "error.html",
    "loading.html",
    "loading.gif"
  ]
}